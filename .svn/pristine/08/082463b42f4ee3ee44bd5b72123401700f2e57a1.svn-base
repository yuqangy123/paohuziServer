local gameConfig = {}
local gameTimes = 8
local currentPlayTimes = 0
local forceHupai = true
local zhongzhuang = false

function gameConfig:reset(t, b)
	gameTimes = t or 8
	currentPlayTimes = 0
	forceHupai = b and true or false
end
function gameConfig:getPlayConfigTimes()
	return gameTimes
end
function gameConfig:setPlayConfigTimes(t)
	gameTimes = t
end
function gameConfig:isForceHupai()
	return forceHupai
end
function gameConfig:setForceHupai(b)
	forceHupai = b
end

function gameConfig:getCurrentPlayTimes()
	return currentPlayTimes
end
function gameConfig:setCurrentPlayTimes(t)
	currentPlayTimes = t
end

function gameConfig:getZhongzhuang()
	return zhongzhuang
end
function gameConfig:setZhongzhuang(b)
	zhongzhuang = b
end



return gameConfig