
local gameResult = {}
gameResult.type = 0

local winPid = 0
local winSite = 0
local zhuangPid = 0
local hongzhuangIndex = false
local wintype = 0
local winner = {
	none = 0,
	hongzhuang = 1,
	tianhu = 2,
	dihu = 3,
	zimo = 4,
	popaohu = 5,
	chouhu = 6,	
	honghu = 7,
	dianhu = 8,
	hongwu = 9,--红乌
	wuhu = 10,
	zimo = 11,
	duiduihu = 12,
	haidi = 13
}

function gameResult:set(zpid, wpid, wsite, winType, hz)
	winPid = wpid
	winSite = wsite
	zhuangPid = zpid
	hongzhuangIndex = hz
	wintype = winType
end

--是否篊庄
function gameResult:isHongzhuang()
	return hongzhuangIndex
end
function gameResult:getWinType()
	return wintype
end

function gameResult:getWinnerPid()
	return winPid
end

function gameResult:getWinnerSite()
	return winSite
end

function gameResult:getZhuangPid()
	return zhuangPid
end


function gameResult:isWin()
	return winPid == zhuangPid and not self:isHongzhuang()
end

return gameResult
